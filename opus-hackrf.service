# Systemd startup module for PCM->Opus transcoder for HackRF audio
# Phil Karn, KA9Q Aug 2018

[Unit]
Description=HackRF opus transcoder
Requires=multi-user.target

[Service]
Nice=-10
Type=simple
ExecStart=/usr/local/bin/opus -I pcm.hackrf.mcast.local,eth0 -R opus.hackrf.mcast.local,eth0
DynamicUser=1
Restart=always

[Install]
WantedBy=multi-user.target
