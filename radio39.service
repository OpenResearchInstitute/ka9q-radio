# systemd unit for FM radio receiver on 144.39 MHz (North American APRS channel)
# Phil Karn, KA9Q, Aug 2018

[Unit]
Description=144.39 MHz FM radio
Requires=multi-user.target

[Service]
Nice=-10
Type=simple
ExecStart=/usr/local/bin/radio --mode fm --frequency 144m39 -I sdr.vhf.mcast.local,eth0 -R radio.vhf.mcast.local,eth0 -D pcm.vhf.mcast.local,eth0
DynamicUser=true
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
